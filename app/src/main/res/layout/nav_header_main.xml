<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/drawerHeaderHeight"
    android:background="?attr/drawerHeaderColor"
    android:foreground="?attr/selectableItemBackground"
    android:id="@+id/navHeaderRoot">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="@dimen/_54sdp"
        app:cardBackgroundColor="@color/blue_700_light"
        app:cardElevation="?attr/profileImageElevation"
        app:contentPadding="@dimen/_4sdp">

        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="?attr/drawerProfileSize"
            android:layout_height="?attr/drawerProfileSize"
            android:src="@drawable/ic_person_64" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/headerUsernameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Navigation Header title"
        android:textSize="?attr/drawerHeaderTextSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="?attr/textColorOnSecondaryColor"
        android:gravity="end"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
